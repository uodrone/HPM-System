{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",

  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyHere_AtLeast32Characters!",
    "Issuer": "HPM-System.IdentityServer",
    "Audience": "HPM-System.API",
    "ExpirationMinutes": 60
  },

  "ReverseProxy": {
    "Routes": {
      "identityserver_account": {
        "ClusterId": "identityserver",
        "Match": {
          "Path": "/api/account/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/account" }
        ]
      },
      "identityserver_auth": {
        "ClusterId": "identityserver",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" }
        ]
      },
      "users_route": {
        "ClusterId": "userservice",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/users" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "cars_route": {
        "ClusterId": "userservice",
        "Match": {
          "Path": "/api/cars/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/cars" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "apartment_route": {
        "ClusterId": "apartmentservice",
        "Match": {
          "Path": "/api/apartment/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/apartment" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "house_route": {
        "ClusterId": "apartmentservice",
        "Match": {
          "Path": "/api/house/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/house" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "status_route": {
        "ClusterId": "apartmentservice",
        "Match": {
          "Path": "/api/status/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/status" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "notifications_route": {
        "ClusterId": "notificationservice",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/notifications" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "files_route": {
        "ClusterId": "filestorageservice",
        "Match": {
          "Path": "/api/files/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/files" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "events_route": {
        "ClusterId": "eventservice",
        "Match": {
          "Path": "/api/events/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/events" }
        ],
        "AuthorizationPolicy": "authenticated"
      },
      "eventtypes_route": {
        "ClusterId": "eventservice",
        "Match": {
          "Path": "/api/eventtypes/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/eventtypes" }
        ],
        "AuthorizationPolicy": "authenticated"
      }
    },
    "Clusters": {
      "identityserver": {
        "Destinations": {
          "destination1": {
            "Address": "http://hpm-system.identityserver:8080"
          }
        }
      },
      "userservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://hpm-system.userservice:8080"
          }
        }
      },
      "apartmentservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://hpm-system.apartmentservice:8080"
          }
        }
      },
      "notificationservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://hpm-system.notificationservice:8080"
          }
        }
      },
      "filestorageservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://hpm-system.filestorageservice:8080"
          }
        }
      },
      "eventservice": {
        "Destinations": {
          "destination1": {
            "Address": "http://hpm-system.eventservice:8080"
          }
        }
      }
    }
  }
}