@{
    ViewData["Title"] = "Home Page";
}
  

    <!-- Основной контент -->
<div class="main-content align-content-center">
    <div class="container">
        <!-- Приветствие для авторизованных пользователей -->
        <section data-auth-required class="auth-required">

            <h1 class="page-title text-center">Личный кабинет</h1>

            <div class="dashboard-grid">
                <!-- Профиль пользователя -->
                <div class="dashboard-card user-card">
                    <h3 class="card-header card-header_user">
                        Профиль пользователя
                    </h3>

                    <div class="user-info">
                        <div class="user-name" data-user-fullname></div>
                        <div class="user-phone" data-user-phone></div>
                    </div>

                    <div class="text-center">
                        <a class="user-link card-link" data-user-id href="/user/">
                            Редактировать профиль
                        </a>
                    </div>
                </div>

                <!-- Уведомления -->
                <div class="dashboard-card notifications-card">
                    <h3 class="card-header card-header_notification">Уведомления</h3>

                    <div class="empty-state">
                        Нет новых уведомлений
                    </div>

                    <div class="text-center">
                        <a data-user-id href="/notification/by-user/" class="card-link notification-link">
                            Все уведомления
                        </a>
                    </div>
                </div>

                <!-- Квартиры пользователя -->
                <div class="dashboard-card apartments-card">
                    <h3 class="card-header">Квартиры пользователя</h3>

                    <div class="apartments-list">
                       
                    </div>

                    <div class="text-center">
                        <a data-user-id href="/apartment/by-user/" class="card-link apartment-link">
                            Все квартиры пользователя
                        </a>
                    </div>
                </div>

                <!-- Дома пользователя -->
                <div class="dashboard-card houses-card">
                    <h3 class="card-header card-header_house">Дома пользователя</h3>

                    <div class="houses-list">
                    </div>

                    <div class="text-center">
                        <a class="card-link house-link" data-user-id href="/house/by-user/">
                            Все дома пользователя
                        </a>
                    </div>
                </div>

                <!-- События -->
                <div class="dashboard-card events-card">
                    <h3 class="card-header card-header_event">События</h3>

                    <div class="empty-state">
                        Нет новых событий
                    </div>

                    <div class="text-center">
                        <a data-user-id href="/events/by-user/" class="card-link event-link">
                            Все события
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Контент для неавторизованных пользователей -->
        <section data-guest-only class="guest-only">
            <div class="text-center">
                <h1>Добро пожаловать в HPM System</h1>
                <p>Современная система управления жилыми сообществами</p>
                <div class="d-flex flex-wrap justify-content-center gap-4">
                    <a href="https://localhost:55676/auth/login" class="btn btn_secondary" style="font-size: 1.1rem; padding: 12px 24px;">
                        Войти в систему
                    </a>
                    <a href="https://localhost:55676/auth/register" class="btn btn_primary" style="font-size: 1.1rem; padding: 12px 24px;">
                        Зарегистрироваться
                    </a>
                </div>
            </div>
        </section>
    </div>
</div>